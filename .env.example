# ===========================================
# DeHyl Project Financial System
# Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# -------------------------------------------
# Supabase (https://supabase.com)
# -------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# QuickBooks Online (https://developer.intuit.com)
# -------------------------------------------
QUICKBOOKS_CLIENT_ID=your-client-id
QUICKBOOKS_CLIENT_SECRET=your-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/auth/callback/quickbooks
# For production, use your Vercel URL:
# QUICKBOOKS_REDIRECT_URI=https://your-app.vercel.app/api/auth/callback/quickbooks

# -------------------------------------------
# Google Drive API (https://console.cloud.google.com)
# -------------------------------------------
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
# For production:
# GOOGLE_REDIRECT_URI=https://your-app.vercel.app/api/auth/callback/google

# DeHyl's Projects folder ID (from Google Drive URL)
GOOGLE_DRIVE_PROJECTS_FOLDER_ID=1qRGYL7NylTEkjjvoZStyjPWJyWR9fI6n

# -------------------------------------------
# App Configuration
# -------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
